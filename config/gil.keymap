#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/outputs.h>
#include <dt-bindings/zmk/ext_power.h>

&lt {
    tapping-term-ms= <200>;
    quick-tap-ms = <200>;
    flavor = "tap-preferred";
};
&mt {
    tapping-term-ms = <150>;
    quick-tap-ms = <200>;
    flavor = "tap-preferred";
};
&soft_off {
    hold-time-ms = <5000>; // Only turn off it the key is held for 5 seconds or longer.
};

/ {

    behaviors {
        hy: hyperkey_mods {
            compatible = "zmk,behavior-hold-tap";
            #binding-cells = <2>;
            tapping-term-ms = <400>;
            quick-tap-ms = <200>;
            require-prior-idle-ms = <200>;
            flavor = "tap-preferred";
            bindings = <&kp>, <&kp>;
        };
        hm: homerow_mods {
            compatible = "zmk,behavior-hold-tap";
            #binding-cells = <2>;
            tapping-term-ms = <200>;
            quick-tap-ms = <200>;
            flavor = "tap-preferred";
            bindings = <&kp>, <&kp>;
        };
    };

    keymap {
        compatible = "zmk,keymap";
        default_layer {
            label = "IGOR";
            bindings = <
&kp Q       &kp W      &kp E      &kp R       &hy LC(LA(LGUI)) T       &hy LC(LA(LGUI)) Y     &kp U        &kp I       &kp O      &kp P
&hm LCTRL A &hm LALT S &hm LGUI D &hm LSHFT F &hy LS(LC(LA(LGUI))) G   &hy LS(LC(LA(LGUI))) H &hm RSHFT J  &hm RGUI K  &hm RALT L &hm RCTRL SEMICOLON
&kp Z       &kp X      &kp C      &kp V       &kp B                    &kp N                  &kp M        &kp COMMA   &kp DOT    &kp SLASH
                                  &lt 3 ESC   &lt 1 SPACE              &lt 2 SPACE            &mo 4
            >;
        };
        layer_1 {
            label = "L1";
            bindings = <
&kp TILDE  &kp EXCL   &kp AT     &kp HASH  &kp DLLR    &trans    &trans   &trans  &trans     &kp DEL
&kp TAB    &kp PRCNT  &kp CARET  &kp AMPS  &kp ASTRK   &kp LEFT  &kp DOWN &kp UP  &kp RIGHT  &trans
&none      &none      &none      &kp BSPC  &kp ENTER   &trans    &trans   &trans  &trans     &trans
                                 &mo 7     &none       &trans    &trans
            >;
        };
        layer_2 {
            label = "L2";
            bindings = <
&trans &trans &trans &trans &trans    &kp DQT   &kp LPAR  &kp RPAR  &none  &kp BSPC
&trans &trans &trans &trans &trans    &kp SQT   &kp LBRC  &kp RBRC  &none  &kp BSLH
&trans &trans &trans &trans &trans    &kp UNDER &kp LBKT  &kp RBKT  &none  &kp ENTER
                     &trans &trans    &none     &mo 8
            >;
        };
        layer_3 {
            label = "L3";
            bindings = <
&kp GRAVE  &trans    &kp UP     &trans      &trans       &bt BT_SEL 0       &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4
&caps_word &kp LEFT  &kp DOWN   &kp RIGHT   &kp BSPC     &bt BT_DISC 0      &bt BT_DISC 1 &bt BT_DISC 2 &bt BT_DISC 3 &bt BT_DISC 4
&kp LG(Z)  &kp LG(X) &kp LG(C)  &kp LG(V)   &kp ENTER    &ext_power EP_TOG  &soft_off     &trans        &trans        &bt BT_CLR
                                &none       &mo 5        &trans             &trans
            >;
        };
        layer_4 {
            label = "L4";
            bindings = <
&trans &trans &trans &trans &trans    &kp PLUS   &kp N1  &kp N2  &kp N3  &kp DEL
&trans &trans &trans &trans &trans    &kp EQUAL  &kp N4  &kp N5  &kp N6  &kp PIPE
&trans &trans &trans &trans &trans    &kp MINUS  &kp N7  &kp N8  &kp N9  &kp N0
                     &trans &trans    &mo 6      &none
            >;
        };
        layer_5 {
            label = "L5";
            bindings = <
&kp KP_PLUS   &kp KP_N1  &kp KP_N2  &kp KP_N3  &kp KP_ASTERISK   &kp F1   &kp F2   &kp F3   &kp F4      &kp F5
&kp KP_MINUS  &kp KP_N4  &kp KP_N5  &kp KP_N6  &kp KP_SLASH      &kp F6   &kp F7   &kp F8   &kp F9      &kp F10
&kp KP_DOT    &kp KP_N7  &kp KP_N8  &kp KP_N9  &kp KP_N0         &kp F11  &kp F12  &none    &none       &none
                                    &none      &none             &none    &none
            >;
        };
        layer_6 {
            label = "L6";
            bindings = <
&none &none &none &none &none  &none &none &none &none &none
&none &none &none &none &none  &none &none &none &none &none
&none &none &none &none &none  &none &none &none &none &none
                  &none &none  &none &none
            >;
        };
        layer_7 {
            label = "L7";
            bindings = <
&kp C_FF &ext_power EP_TOG &kp K_MUTE   &none      &none        &bt BT_SEL 0   &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3   &bt BT_SEL 4
&kp C_RW &kp PAUSE_BREAK   &kp K_VOL_UP &none      &none        &bt BT_DISC 0  &bt BT_DISC 1 &bt BT_DISC 2 &bt BT_DISC 3  &bt BT_DISC 4
&kp C_PP &kp SLCK          &kp K_VOL_DN &sys_reset &bootloader  &bootloader    &sys_reset    &soft_off     &out OUT_TOG   &bt BT_CLR
                                      &none      &none          &none          &none
            >;
        };
        layer_8 {
            label = "L8";
            bindings = <
&none &none &none &none      &none              &bt BT_SEL 0   &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3   &bt BT_SEL 4
&none &none &none &none      &ext_power EP_TOG  &bt BT_DISC 0  &bt BT_DISC 1 &bt BT_DISC 2 &bt BT_DISC 3  &bt BT_DISC 4
&none &none &none &sys_reset &bootloader        &bootloader    &sys_reset    &soft_off     &out OUT_TOG   &bt BT_CLR
                  &none      &none              &none          &none
            >;
        };
    };
};

